<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  
<bean id="id" class="com.demo.springDemo.Vehicle">  
    <property name = "brandName" value="arun"></property>  
    <property name = "fuelType" value="petrol"></property> 
    <property name = "mileage" value="10"></property> 
    <property name = "colour" value="blue"></property> 
</bean>  
  
</beans>  